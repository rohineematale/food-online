<%= form_for [:admin, @food_item], class: "form" do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, value: number_to_currency(f.object.price.to_f, delimiter: '', unit: ''), class: "form-control", step: :any %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.fields_for :photo, @food_item.photo do |photo_form| %>
      <%= photo_form.hidden_field :id %>
      <%= photo_form.label :image %>
      <%= photo_form.file_field :image, class: "form-control" %>
      <p>valid image formats are jpeg, jpg, png.</p>
    <%- end %>
  </div>
  <div class="form-group">
    <%= render partial: 'time_slot_form' %>
  </div>
  <%= f.submit "Submit", class: "btn btn-info"%>
  <%= link_to "Cancel", admin_food_items_path %>
<%- end %>