<%- flash.each do |type, message| %>
  <div class="alert alert-<%= bootstrap_class_for(type) %> fade in">
    <button class="close" data-dismiss="alert">Ã—</button>
    <%- if message.class.to_s == "String" %>
      <li><%= message %></li>
    <%- else %>
      <%- message.each do |msg| %>
        <li><%= msg %></li>
      <%- end %>
    <%- end %>
  </div>
<% end %>